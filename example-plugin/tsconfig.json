{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "src"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}